extends layout.pug 
block Title_Web
    title Categories 


block Header
    header.navigation 
                h1 
                    a.logo(href='/') Medicine Registry

                nav.navLinks
                    a.links(href='/medicines/list') All medicines
                    a.links(href='/medicines/create') New medicine
                    a.links.active(href='/categories/list') All categories
                    a.links(href='/categories/create') New category


block MainContent
    div.categories_List
        div.h2_position
            h2 All categories 

        if error 
            p.error You cannot submit empty data
        if sended 
            p.succes Data is changed and saved
        if deleted_item
            p.succes Data is deleted
        each category in Categories
            div.Category_wrapper 
                a.category(href=`/categories/list/${category.id}/update`) #{category.title}
                a.deleteCat(href=`/categories/list/${category.id}/delete`) Delete
                
